{
	"name": "momentum-desktop",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"main": "dist/main.js",
	"scripts": {
		"dev": "npm run build:main && npm run build:preload && concurrently -k \"vite --port 5174\" \"wait-on http://localhost:5174 && VITE_DEV_SERVER_URL=http://localhost:5174 electron dist/main.js\"",
		"build:main": "tsc -p tsconfig.main.json",
		"build:preload": "tsc -p tsconfig.preload.json",
		"build:renderer": "vite build",
		"build": "npm run build:main && npm run build:preload && npm run build:renderer && electron-builder",
		"pack": "npm run build:main && npm run build:preload && npm run build:renderer && electron-builder --dir"
	},
	"dependencies": {
		"@supabase/ssr": "^0.7.0",
		"@supabase/supabase-js": "^2.58.5",
		"uiohook-napi": "^1.5.4"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.14",
		"@types/node": "^22.17.0",
		"concurrently": "^9.1.0",
		"electron": "^40.1.0",
		"electron-builder": "^26.6.0",
		"svelte": "^5.41.0",
		"tailwind-scrollbar-hide": "^4.0.0",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"wait-on": "^7.2.0"
	},
	"build": {
		"appId": "com.founderszoo.desktop",
		"productName": "Founders Zoo",
		"icon": "../static/icon.png",
		"directories": {
			"output": "release"
		},
		"files": [
			"dist/**"
		],
		"asar": true,
		"mac": {
			"category": "public.app-category.productivity",
			"icon": "../static/icon.png",
			"target": [
				"dmg"
			]
		}
	}
}
